/* pages/personal/coupon/index.wxss */

#coupon {
}

#coupon .van-tab {
  font-size: 26rpx;
}

#coupon .van-tab--active {
  color: #734284;
}

#coupon .pro-item {
  /*width:100%;*/
  height: 80px;
  margin: 5px 5px 0 5px;
  background-color: white;
  /*border: 1px solid #734284;*/
  position: relative;
  overflow: hidden;
  
}

#coupon .pro-item .p-i-left {
  background-color: white;
  display: flex;
  flex-direction: row;
  height: 80px;
}

#coupon .title {
  font-size: 26rpx;
  display: flex;
  align-items: center;
  padding: 0 10rpx;
}

#coupon .pro-item .p-i-left .l-t-left {
  width: 80px;
  font-size: 28rpx;
  font-family: "Microsoft YaHei";
  display: flex;
  justify-content: center;
  align-items: center;
}

#coupon .pro-item .p-i-left .l-t-right {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  border-right: 2px dashed #efeff3;
  padding-left: 9px;
}

#coupon .pro-item .p-i-left .l-t-right .r-top {
  flex: 1;
  /*width: 100%;*/
  height: 35px;
  line-height: 30px;
  font-size: 22px;
  font-weight: bold;
  padding-top: 5px; 
}

#coupon .pro-item .p-i-left .l-t-right .r-top .r-top-coupon-type {
  width: 68px;
  float: left;
  margin-right: 4px;
}

#coupon .pro-item .p-i-left .l-t-right .r-top .r-top-des {
  height: 35px;
  line-height: 15px;
  color: #d4a9cb;
  font-size: 12px;
  display: table-cell;
  vertical-align: middle;
  padding-right: 3px;
}

#coupon .pro-item .p-i-left .l-t-right .r-bottom {
  /* width: 100%; */
  height: 35px;
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #999898;
}

#coupon .pro-item .css-circular-top {
  width: 10px;
  height: 10px;
  border-radius: 50%;
  background-color: #efeff3;
  /*background-color: #F36F40;*/
  position: absolute;
  right: 76px;
  top: -5px;
}

#coupon .pro-item .css-circular-bottom {
  width: 10px;
  height: 10px;
  border-radius: 50%;
  background-color: #efeff3;
  /*background-color: #F36F40;*/
  position: absolute;
  right: 76px;
  bottom: -5px;
}
