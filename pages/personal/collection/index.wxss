
#collection .coll-text{
    width: 100%;
    height: 35px;
    line-height: 35px;
    font-size: 14px;
    color:#9D9D9D;
    border-bottom: 1px solid #cccccc;
    background-color: white;
    position: fixed;
    padding-right: 10px;
}

#collection .coll-text-left{
    margin-left: 5px;
    font-size: 13px;
}

#collection .coll-text-right{
    float: right;
    margin-right: 10px;
    padding-left: 3px;
}

#collection .van-card__content{
  display: flex;
  flex-direction: column;
}

#collection .van-card__bottom{
  display: flex;
  flex-direction: column;
}

#collection .van-card__origin-price{
  margin-left: 0;
}

#collection .title-css{
  font-size: 26rpx;
}

#collection .desc-css{
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
}

#collection .price{
  font-size: 28rpx;
  color: #7B7B7B;
  margin: 4rpx 0;
}

#collection .origin-price{
  font-size: 28rpx;
  color: red;
}

.swipe-c{
  overflow: hidden;
}

#collection .van-swipe-cell__left,
.van-swipe-cell__right {
  display: inline-block;
  width: 65px;
  height: 44px;
  font-size: 15px;
  line-height: 44px;
  color: #fff;
  text-align: center;
  background-color: #f44;
}